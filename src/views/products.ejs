<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

<body>
   <%- include('./partials/header') %>

    <main class="productsPage">

            <% productos.forEach(product => { %>
                <article class="productsPage_products">
                    <img src="/img/product/<%= product.imagen %>" alt="" onerror="this.src='/img/product/default.jpg'" class="productsPage__img ">
                    <section class="productPage__detail">
                        <h4><%= product.name %></h4>
                        <p><%= product.description %></p>
                    </section>
                    <section class="productPage__buttons">
                        <a href="/products/detail/<%= product.articulos_id %>" class="productPage__link">Detalles</a>
                        <a href="/products/<%= product.articulos_id %>/edit" class="productPage__link">Edit</a>
                        <a href="/products/<%= product.articulos_id %>/delete" class="productPage__link">Delete</a>
                    </section>
                </article>
            <% }) %>

            <section>
                <a href="/products/productCreate">AÃ±adir mas productos</a>
            </section>

    </main>

    <%- include('./partials/footer') %>
    <script src="/js/script.js"></script>
</body>

</html>